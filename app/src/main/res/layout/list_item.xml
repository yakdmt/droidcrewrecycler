<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <io.droidcrew.recycler.snippet.items.TitleView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Title lorem ipsum"/>

    <io.droidcrew.recycler.snippet.items.DescriptionView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="80dp"
        android:text="Description lorem ipsum" />

    <io.droidcrew.recycler.snippet.items.SomeImageView
        android:id="@+id/image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/abc_vector_test"
        >

    </io.droidcrew.recycler.snippet.items.SomeImageView>

    <io.droidcrew.recycler.snippet.items.ButtonView
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="8dp"/>

    <io.droidcrew.recycler.snippet.items.ButtonView
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="8dp"/>

</LinearLayout>