<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <action
        android:id="@+id/action_to_HomeFragment"
        app:destination="@id/HomeFragment" />

    <action
        android:id="@+id/action_to_FirstFragment"
        app:destination="@id/FirstFragment" />

    <action
        android:id="@+id/action_to_SecondFragment"
        app:destination="@id/SecondFragment" />

    <action
        android:id="@+id/action_to_ThirdFragment"
        app:destination="@id/ThirdFragment" />

    <fragment
        android:id="@+id/HomeFragment"
        android:name="io.droidcrew.recycler.HomeFragment"
        android:label="@string/home_fragment_label"
        tools:layout="@layout/fragment_home">
    </fragment>

    <fragment
        android:id="@+id/FirstFragment"
        android:name="io.droidcrew.recycler.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">
    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="io.droidcrew.recycler.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">
    </fragment>

    <fragment
        android:id="@+id/ThirdFragment"
        android:name="io.droidcrew.recycler.ThirdFragment"
        android:label="@string/third_fragment_label"
        tools:layout="@layout/fragment_third">
    </fragment>

</navigation>